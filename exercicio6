    <script>
        var num1;
        var num2;

        num1=prompt(" Digite o pirmeiro número: ");
        num1=parseFloat(num1);
        
        num2=prompt(" Digite o segundo número: ");
        num2=parseFloat(num2);

        if(num1 > num2){
            alert(" O " +num1 +" é maior e o " +num2 +" é menor " );
        }
        else{
            alert(" O " +num2 +" é maior e o " +num1 +" é menor ");
        }
    </script>

  
